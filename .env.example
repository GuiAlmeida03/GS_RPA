# Coloque credenciais reais quando integrar SMTP/ITSM.
# Nesta POC, os valores não são usados para chamadas externas.
APP_ENV=local
REPLY_FROM_EMAIL=bem-estar@empresa.com
ONCALL_CHANNEL=saude_ocupacional_oncall
TICKET_SYSTEM=mock

# SMTP genérico (preencha para enviar e-mails reais)
SMTP_HOST=smtp.seuprovedor.com
SMTP_PORT=587
SMTP_USER=seu_usuario
SMTP_PASS=sua_senha
SMTP_STARTTLS=true

# Controle de envio real (true = envia e-mail; false = apenas preview)
SEND_EMAILS=false
